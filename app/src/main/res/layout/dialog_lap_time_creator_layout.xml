<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="@string/laps_time_title"
        android:background="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/lapMinutesEditText"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:hint="Minutes"
            android:layout_marginBottom="15dp"
            android:background="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:inputType="number"
            android:maxLength="10"
            android:padding="5dp"
            android:maxLines="1" />

        <EditText
            android:id="@+id/lapSecondsEditText"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:hint="Seconds"
            android:layout_marginBottom="15dp"
            android:inputType="number"
            android:maxLength="10"
            android:padding="5dp"
            android:maxLines="1"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/lap100OfSecEditText"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:hint="/ 100 Sec"
            android:inputType="number"
            android:maxLength="10"
            android:padding="5dp"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:textSize="18dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lapOkButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="sans-serif-light"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="@android:string/ok"/>

        <android.support.v4.widget.Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/lapCancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="sans-serif-light"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="@android:string/cancel"/>

    </LinearLayout>

</LinearLayout>